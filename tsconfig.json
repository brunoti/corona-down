{
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@backend/*": ["backend/src/*"],
      "@types": ["types/index.d.ts"]
    },
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types",
      "./package/types"
    ]
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test"
  ]
}
